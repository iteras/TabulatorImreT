<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FullScreen"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <android.support.percent.PercentRelativeLayout
        xmlns="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttons"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent = "100%"
        app:layout_heightPercent = "100%"
        android:background="#000010"

        >

        <!-- test to showgit -->
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="35dp"
            android:clickable="false"
            android:textColor="#FFFFFF"
            android:text="0"
            android:maxLines="7"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"/>
        <Button
            android:id="@+id/button1"
            android:text="1"
            style="@style/calcbuttons"
            android:layout_below="@id/textViewResult"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>
        <Button
            android:id="@+id/button2"
            android:text="2"
            style="@style/calcbuttons"
            android:layout_below="@id/textViewResult"
            android:layout_toRightOf="@id/button1"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>
        <Button
            android:id="@+id/button3"
            android:text="3"
            style="@style/calcbuttons"
            android:layout_below="@id/textViewResult"
            android:layout_toRightOf="@id/button2"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>


        <!-- Clear button -->
        <Button
            android:id="@+id/C"
            android:text="C"
            style="@style/calcbuttons"
            android:layout_below="@id/textViewResult"
            android:layout_toRightOf="@id/button3"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>
        <Button
            android:id="@+id/button4"
            android:text="4"
            style="@style/calcbuttons"
            android:layout_toLeftOf="@id/button2"
            android:layout_below="@id/button1"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/button5"
            android:text="5"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button4"
            android:layout_below="@id/button1"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/button6"
            android:text="6"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button5"
            android:layout_below="@id/button1"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>


        <!-- Times button -->
        <Button
            android:id="@+id/X"
            android:text="*"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button6"
            android:layout_below="@id/button1"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/button7"
            android:text="7"
            style="@style/calcbuttons"
            android:layout_toLeftOf="@id/button2"
            android:layout_below="@id/button4"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/button8"
            android:text="8"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button7"
            android:layout_below="@id/button4"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/button9"
            android:text="9"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button8"
            android:layout_below="@id/button4"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>


        <!-- Divide button -->
        <Button
            android:id="@+id/D"
            android:text="/"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button9"
            android:layout_below="@id/button4"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>
        <Button
            android:id="@+id/button0"
            android:text="0"
            style="@style/calcbuttons"
            android:layout_toLeftOf="@id/button8"
            android:layout_below="@id/button8"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>


        <!-- Equals button -->
        <Button
            android:id="@+id/E"
            android:text="="
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/button0"
            android:layout_below="@id/button8"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <!-- Plus button -->
        <Button
            android:id="@+id/P"
            android:text="+"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/E"
            android:layout_below="@id/button8"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>


        <!-- Minus button -->
        <Button
            android:id="@+id/M"
            android:text="-"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/P"
            android:layout_below="@id/button8"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <!-- Sin button -->
        <Button
            android:id="@+id/N"
            android:text="sin"
            style="@style/calcbuttons"
            android:layout_toLeftOf="@id/E"
            android:layout_below="@id/button0"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <!-- Cos button -->
        <Button
            android:id="@+id/S"
            android:text="cos"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/N"
            android:layout_below="@id/button0"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <!-- Power button -->
        <Button
            android:id="@+id/W"
            android:text="^"
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/S"
            android:layout_below="@id/button0"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

        <!-- Coma button -->
        <Button
            android:id="@+id/K"
            android:text=","
            style="@style/calcbuttons"
            android:layout_toRightOf="@id/W"
            android:layout_below="@id/button0"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"/>

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>